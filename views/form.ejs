<h1 class="page-title">New Message</h1>

<form action="/new" method="POST" class="simple-form">
  <input type="text" name="user" placeholder="Your name" required>
  <textarea name="text" placeholder="Your message" rows="4" required></textarea>
  <button type="submit" class="submit-button">Submit</button>
</form>

<style>
  /* Minimal styles for the form. Move this to public/styles.css */
