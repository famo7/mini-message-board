  .simple-form textarea {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 3px;
    box-sizing: border-box;
    /* Include padding in width */
  }

  .submit-button {
    background-color: #007bff;
    /* Blue */
    color: white;
